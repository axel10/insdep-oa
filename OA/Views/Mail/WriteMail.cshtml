    $("#send").on("click",
        function() {
            var formdata = new FormData($(".right-panel").get(0));
            formdata.append("content", editor.txt.html());
            $.ajax({
                type: 'post',
                url: "/mail/SendMail",
                data: formdata,
                processData: false,
                contentType: false,
                cache: false,
                success: function(data) {
                    console.log(formdata);
                },
                error: function() {
                    console.log(formdata);
                }
            });
        });

    function tagFormat(value, row) {
        return value.split("#")[1];
    }
