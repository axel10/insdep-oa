    $("#saveDraft").on("click",
        function() {
            var formdata = new FormData($(".right-panel").get(0));
            formdata.append("content", editor.txt.html());
            $.ajax({
                type: 'post',
                url: "/mail/SaveDraft",
                data: formdata,
                processData: false,
                contentType: false,
                cache: false,
